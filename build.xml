<project name="TimeZoneCalculator" xmlns:jacoco="antlib:org.jacoco.ant"  default="run">
	<!--Change this value to your javafx lib directory-->
	<!--<property name="mod.path" value="/home/adria/javafx-sdk-17.0.7/lib"/>-->
	
	<taskdef uri="antlib:org.jacoco.ant" resource="org/jacoco/ant/antlib.xml">
		<classpath path="jacocoant.jar"/>
	</taskdef>
	<target name="build">
		<javac srcdir="."  includeantruntime="false" debug="true" debuglevel="lines,vars,source">
				<classpath>
					<pathelement location="."/>
				</classpath>
				<exclude name="**/report/**"/>
				<exclude name="**.xml"/>
				<exclude name="**.jar"/>
				<exclude name="**.mp3"/>
				<exclude name="**.fxml"/>
				<exclude name="**.md"/>
				<exclude name="**.exec"/>
		</javac>
	</target>
	<target name="run" depends="build">	
		<java classname="TimeZoneCalculator" fork="true">
			<classpath>
				<pathelement location="."/>
			</classpath>
		</java>
	</target>
	<target name="report" depends="build">	
		<jacoco:coverage>
			<java classname="TimeZoneCalculator" fork="true">
				<classpath>
					<pathelement location="."/>
				</classpath>
			</java>
		</jacoco:coverage>
		<jacoco:report>
			<executiondata>
				<file file="jacoco.exec"/>
			</executiondata>
			<structure name="TimeZoneCalculator">
				<classfiles>
					<fileset dir="." includes="*.class">
					</fileset>
				</classfiles>
				<sourcefiles encoding="UTF-8">
				<fileset dir="." includes="*.class">
					</fileset>
				</sourcefiles>
			</structure>
			<html destdir="report"/>
		</jacoco:report>
	</target>
	<target name="clean">
        <delete>
			<fileset dir="." includes="*.class"/>
			<fileset dir="." includes="*.exec"/>
        </delete>
        <delete dir="report" />
    </target>
</project>
